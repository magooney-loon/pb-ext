{{define "visitor_analytics"}}
<div class="panel metrics-panel">
    <div class="section-title compact-title">VISITOR ANALYTICS</div>
    
    <div class="metrics-row">
        <!-- Total Visitors -->
        <div class="stat-card">
            <div class="stat-header">
                <svg class="stat-icon visitors-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                    <circle cx="9" cy="7" r="4"></circle>
                    <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                </svg>
                <div class="stat-title">Unique Visitors</div>
            </div>
            
            <div class="stat-value">{{.AnalyticsData.UniqueVisitors}}<span class="stat-unit">total</span></div>
            
            <div class="mini-progress">
                <div class="mini-progress-value" style="width: 100%"></div>
            </div>
            
            <div class="stat-details">
                <div class="detail-row">
                    <div class="detail-label">NEW</div>
                    <div class="detail-value">{{.AnalyticsData.NewVisitors}}</div>
                </div>
                <div class="detail-row">
                    <div class="detail-label">RETURNING</div>
                    <div class="detail-value">{{.AnalyticsData.ReturningVisitors}}</div>
                </div>
            </div>
        </div>
        
        <!-- Page Views -->
        <div class="stat-card">
            <div class="stat-header">
                <svg class="stat-icon pageviews-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                    <circle cx="12" cy="12" r="3"></circle>
                </svg>
                <div class="stat-title">Page Views</div>
            </div>
            
            <div class="stat-value">{{.AnalyticsData.TotalPageViews}}<span class="stat-unit">views</span></div>
            
            <div class="mini-progress memory-progress">
                <div class="mini-progress-value memory-progress-value" style="width: 100%"></div>
            </div>
            
            <div class="stat-details">
                <div class="detail-row">
                    <div class="detail-label">VIEWS/VISITOR</div>
                    <div class="detail-value">{{printf "%.1f" .AnalyticsData.ViewsPerVisitor}}</div>
                </div>
                <div class="detail-row">
                    <div class="detail-label">TODAY</div>
                    <div class="detail-value">{{.AnalyticsData.TodayPageViews}}</div>
                </div>
                <div class="detail-row">
                    <div class="detail-label">YESTERDAY</div>
                    <div class="detail-value">{{.AnalyticsData.YesterdayPageViews}}</div>
                </div>
            </div>
        </div>
        
        <!-- Devices -->
        <div class="stat-card">
            <div class="stat-header">
                <svg class="stat-icon devices-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="4" y="4" width="16" height="16" rx="2" ry="2"></rect>
                    <rect x="9" y="9" width="6" height="6"></rect>
                    <line x1="2" y1="12" x2="4" y2="12"></line>
                    <line x1="20" y1="12" x2="22" y2="12"></line>
                    <line x1="12" y1="2" x2="12" y2="4"></line>
                    <line x1="12" y1="20" x2="12" y2="22"></line>
                </svg>
                <div class="stat-title">Devices</div>
            </div>
            
            <div class="stat-value">{{.AnalyticsData.TopDeviceType}}<span class="stat-unit">most used</span></div>
            
            <div class="mini-progress disk-progress">
                <div class="mini-progress-value disk-progress-value" style="width: {{printf "%.1f%%" .AnalyticsData.TopDevicePercentage}}"></div>
            </div>
            
            <div class="stat-details">
                <div class="detail-row">
                    <div class="detail-label">DESKTOP</div>
                    <div class="detail-value">{{.AnalyticsData.DesktopPercentage}}%</div>
                </div>
                <div class="detail-row">
                    <div class="detail-label">MOBILE</div>
                    <div class="detail-value">{{.AnalyticsData.MobilePercentage}}%</div>
                </div>
                <div class="detail-row">
                    <div class="detail-label">TABLET</div>
                    <div class="detail-value">{{.AnalyticsData.TabletPercentage}}%</div>
                </div>
            </div>
        </div>
        
        <!-- Browsers -->
        <div class="stat-card">
            <div class="stat-header">
                <svg class="stat-icon browser-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <line x1="2" y1="12" x2="22" y2="12"></line>
                    <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
                </svg>
                <div class="stat-title">Browsers</div>
            </div>
            
            <div class="stat-value">{{.AnalyticsData.TopBrowser}}<span class="stat-unit">most used</span></div>
            
            <div class="browser-breakdown">
                {{range $browser, $percent := .AnalyticsData.BrowserBreakdown}}
                <div class="browser-row">
                    <div class="browser-name">{{$browser}}</div>
                    <div class="browser-bar-container">
                        <div class="browser-bar" style="width: {{$percent}}%"></div>
                    </div>
                    <div class="browser-percent">{{$percent}}%</div>
                </div>
                {{end}}
            </div>
        </div>
        
        <!-- Top Pages -->
        <div class="stat-card">
            <div class="stat-header">
                <svg class="stat-icon pages-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                    <polyline points="14 2 14 8 20 8"></polyline>
                    <line x1="16" y1="13" x2="8" y2="13"></line>
                    <line x1="16" y1="17" x2="8" y2="17"></line>
                    <polyline points="10 9 9 9 8 9"></polyline>
                </svg>
                <div class="stat-title">Top Pages</div>
            </div>
            
            <div class="stat-value">{{len .AnalyticsData.TopPages}}<span class="stat-unit">pages</span></div>
            
            <div class="top-pages">
                {{range $index, $page := .AnalyticsData.TopPages}}
                    {{if lt $index 5}}
                    <div class="page-row">
                        <div class="page-rank">{{inc $index}}</div>
                        <div class="page-path">{{$page.Path}}</div>
                        <div class="page-views">{{$page.Views}}</div>
                    </div>
                    {{end}}
                {{end}}
            </div>
        </div>
        
        <!-- Recent Activity -->
        <div class="stat-card">
            <div class="stat-header">
                <svg class="stat-icon activity-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline>
                </svg>
                <div class="stat-title">Recent Activity</div>
            </div>
            
            <div class="stat-value">{{.AnalyticsData.RecentVisitCount}}<span class="stat-unit">last hour</span></div>
            
            <div class="mini-progress activity-progress">
                <div class="mini-progress-value activity-progress-value" style="width: {{printf "%.1f%%" .AnalyticsData.HourlyActivityPercentage}}"></div>
            </div>
            
            <div class="recent-activity">
                <!-- Only showing the 3 most recent activities -->
                {{range $visit := .AnalyticsData.RecentVisits}}
                <div class="activity-row">
                    <div class="activity-time">{{formatTime $visit.Time}}</div>
                    <div class="activity-path">{{$visit.Path}}</div>
                    <div class="activity-device" title="{{$visit.Browser}} on {{$visit.OS}}">
                        {{if eq $visit.DeviceType "desktop"}}
                        <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="2" y="3" width="20" height="14" rx="2"></rect>
                            <line x1="8" y1="21" x2="16" y2="21"></line>
                            <line x1="12" y1="17" x2="12" y2="21"></line>
                        </svg>
                        {{else if eq $visit.DeviceType "mobile"}}
                        <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="7" y="2" width="10" height="20" rx="2"></rect>
                            <line x1="12" y1="18" x2="12" y2="18.01"></line>
                        </svg>
                        {{else}}
                        <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="4" y="4" width="16" height="16" rx="2"></rect>
                            <line x1="4" y1="12" x2="20" y2="12"></line>
                        </svg>
                        {{end}}
                    </div>
                </div>
                {{end}}
            </div>
        </div>
    </div>
</div>
{{end}} 