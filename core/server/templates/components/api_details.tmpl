.auth-note i {
    color: #3b82f6;
    font-size: 14px;
}

/* Enhanced endpoint header */
.api-endpoint-header {
    background: var(--baseAlt1Color);
    padding: 12px 16px;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 12px;
    border-bottom: 1px solid var(--baseAlt2Color);
    transition: all 0.2s ease;
}

.tabs-header {
    display: flex;
    border-bottom: 1px solid var(--baseAlt2Color);
    margin-bottom: 16px;
}

