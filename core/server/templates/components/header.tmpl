{{define "header"}}
<div class="section">
    <header class="section-header">
        <h4 class="section-title">
           <span class="badge badge-sm {{if eq .Status "Healthy"}}badge-success{{else}}badge-danger{{end}} align-center">
                            {{if eq .Status "Healthy"}}
                                <i class="ri-shield-check-line"></i>
                                <span>{{.Status}}</span>
                            {{else}}
                                <i class="ri-error-warning-line"></i>
                                <span>{{.Status}}</span>
                            {{end}}
                        </span>
           Uptime: {{.UptimeDuration}} | {{.SystemStats.Hostname}} | {{.SystemStats.Platform}} {{.SystemStats.OS}} {{.SystemStats.KernelVersion}}
        </h4>
    </header>



                <div class="flex gap-5">
                    <div class="card card-sm view-card">
                        <div class="card-body">
                            <div class="flex flex-column">
                                <div class="flex align-center gap-5 m-b-5">
                                    <i class="ri-arrow-up-line txt-hint"></i>
                                    <div class="txt-lg">{{printf "%.1f/s" .RequestRate}}</div>
                                </div>
                                <div class="txt-hint txt-sm">Requests</div>
                            </div>
                        </div>
                    </div>
                    <div class="card card-sm view-card">
                        <div class="card-body">
                            <div class="flex flex-column">
                                <div class="flex align-center gap-5 m-b-5">
                                    <i class="ri-error-warning-line txt-hint" style="color: {{if gt .ServerStats.TotalErrors.Load 0}}var(--dangerColor){{else}}var(--successColor){{end}}"></i>
                                    <div class="txt-lg" style="color: {{if gt .ServerStats.TotalErrors.Load 0}}var(--dangerColor){{else}}var(--successColor){{end}}">
                                        {{printf "%.2f%%" (errorRate .ServerStats.TotalErrors.Load .ServerStats.TotalRequests.Load)}}
                                    </div>
                                </div>
                                <div class="txt-hint txt-sm">Errors</div>
                            </div>
                        </div>
                    </div>
                    <div class="card card-sm view-card" >
                        <div class="card-body">
                            <div class="flex flex-column">
                                <div class="flex align-center gap-5 m-b-5">
                                    <i class="ri-timer-line txt-hint"></i>
                                    <div class="txt-lg">{{printf "%.1f ms" .AvgRequestTimeMs}}</div>
                                </div>
                                <div class="txt-hint txt-sm">Response</div>
                            </div>
                        </div>
                    </div>
                    <div class="card card-sm view-card">
                        <div class="card-body">
                            <div class="flex flex-column">
                                <div class="flex align-center gap-5 m-b-5">
                                    <i class="ri-links-line txt-hint"></i>
                                    <div class="txt-lg">{{.ServerStats.ActiveConnections.Load}}</div>
                                </div>
                                <div class="txt-hint txt-sm">Active</div>
                            </div>
                        </div>
                    </div>
                </div>


</div>
{{end}}
