{{define "scripts"}}
<script>
    function updateCountdown() {
        const countdownEl = document.getElementById('countdown');
        let seconds = 60;
        
        function tick() {
            seconds--;
            countdownEl.textContent = seconds;
            if (seconds > 0) {
                setTimeout(tick, 1000);
            }
        }
        
        tick();
    }

    window.onload = () => {
        document.getElementById('content').style.opacity = '1';
        updateCountdown();
    };
</script>
{{end}} 