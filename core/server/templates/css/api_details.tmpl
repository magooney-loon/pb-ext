{{define "api_details_css"}}
<style>
/* Layout Container */
.api-details-container {
    display: flex;
    position: relative;
    min-height: 600px;
}

.api-main-content {
    flex: 1;
    min-width: 0;
}

/* API Tester Sidebar */
.api-tester-sidebar {
    position: fixed;
    top: 0;
    right: -400px;
    width: 400px;
    height: 100vh;
    background: var(--baseColor);
    border-left: 1px solid var(--baseAlt2Color);
    z-index: 1000;
    display: flex;
    flex-direction: column;
    transition: right 0.3s ease;
    box-shadow: -2px 0 8px rgba(0, 0, 0, 0.1);
}

.api-tester-sidebar.open {
    right: 0;
}

.api-tester-header {
    padding: 16px;
    border-bottom: 1px solid var(--baseAlt2Color);
    background: var(--baseAlt1Color);
    flex-shrink: 0;
}

.api-tester-header h5 {
    margin: 0;
    color: var(--txtPrimaryColor);
    font-size: 16px;
    font-weight: 600;
}

/* API Description Display */
.api-description-inline {
    color: var(--txtHintColor);
    font-size: 13px;
    margin-top: 4px;
    margin-bottom: 12px;
    font-style: italic;
}

/* SCROLL HIERARCHY: Main container - contains all tester content */
.api-tester-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    background: var(--baseColor);
}

/* Top level scroll container */
.api-tester-scroll {
    flex: 1;
    overflow-y: auto;
    overflow-x: hidden;
}

/* Section containers within scroll area */
.api-tester-section {
    padding: 16px;
    border-bottom: 1px solid var(--baseAlt2Color);
    flex-shrink: 0;
}

.api-tester-section:last-child {
    border-bottom: none;
    padding-bottom: 32px;
}

.api-tester-section h6 {
    margin: 0 0 12px 0;
    font-size: 14px;
    font-weight: 600;
    color: var(--txtPrimaryColor);
}

/* Close button */
.api-tester-close {
    position: absolute;
    top: 16px;
    right: 16px;
    background: none;
    border: none;
    color: var(--txtHintColor);
    cursor: pointer;
    padding: 4px;
    border-radius: 4px;
    transition: all 0.2s ease;
}

.api-tester-close:hover {
    color: var(--txtPrimaryColor);
    background: var(--baseAlt2Color);
}

/* Method and endpoint display */
.api-method-path {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 16px;
    font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
}

.api-method-badge {
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    color: white;
}

.api-method-badge.get { background: #2196f3; }
.api-method-badge.post { background: #4caf50; }
.api-method-badge.put { background: #ff9800; }
.api-method-badge.patch { background: #9c27b0; }
.api-method-badge.delete { background: #f44336; }

.api-endpoint-path {
    font-weight: 500;
    color: var(--txtPrimaryColor);
}

/* Form styles for API tester */
.api-form-group {
    margin-bottom: 16px;
}

.api-form-group label {
    display: block;
    margin-bottom: 4px;
    font-size: 13px;
    font-weight: 500;
    color: var(--txtPrimaryColor);
}

.api-form-group input,
.api-form-group textarea,
.api-form-group select {
    width: 100%;
    padding: 8px 12px;
    border: 1px solid var(--baseAlt2Color);
    border-radius: 4px;
    background: var(--baseColor);
    color: var(--txtPrimaryColor);
    font-size: 13px;
}

.api-form-group textarea {
    resize: vertical;
    min-height: 80px;
    font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
}

/* Response display */
.api-response {
    margin-top: 16px;
    border: 1px solid var(--baseAlt2Color);
    border-radius: 4px;
    overflow: hidden;
}

.api-response-header {
    background: var(--baseAlt1Color);
    padding: 8px 12px;
    border-bottom: 1px solid var(--baseAlt2Color);
    font-size: 12px;
    font-weight: 500;
    color: var(--txtHintColor);
    display: flex;
    justify-content: space-between;
}

.api-response-body {
    padding: 12px;
    background: var(--baseColor);
    max-height: 300px;
    overflow-y: auto;
}

.api-response-body pre {
    margin: 0;
    font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
    font-size: 12px;
    line-height: 1.4;
    white-space: pre-wrap;
    word-break: break-word;
}

/* Status indicator */
.api-status {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    padding: 2px 6px;
    border-radius: 3px;
    font-size: 11px;
    font-weight: 500;
}

.api-status.success {
    background: #e8f5e8;
    color: #2e7d32;
}

.api-status.error {
    background: #ffebee;
    color: #c62828;
}

.api-status.loading {
    background: #e3f2fd;
    color: #1565c0;
}

/* Test button */
.api-test-btn {
    width: 100%;
    padding: 10px;
    background: var(--successColor);
    color: white;
    border: none;
    border-radius: 4px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
}

.api-test-btn:hover:not(:disabled) {
    background: var(--successColorHover);
}

.api-test-btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
}

/* Schema display */
.api-schema {
    background: var(--baseAlt1Color);
    border: 1px solid var(--baseAlt2Color);
    border-radius: 4px;
    padding: 12px;
    margin-top: 8px;
}

.api-schema pre {
    margin: 0;
    font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
    font-size: 12px;
    line-height: 1.4;
    color: var(--txtPrimaryColor);
}

/* Loading states */
.api-loading {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
    color: var(--txtHintColor);
}

.api-loading i {
    margin-right: 8px;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .api-tester-sidebar {
        width: 100%;
        right: -100%;
    }
}

/* Endpoint list styles */
.api-endpoint {
    margin-bottom: 8px;
    border: 1px solid var(--baseAlt2Color);
    border-radius: 6px;
    overflow: hidden;
}

.api-endpoint-header {
    display: flex;
    align-items: center;
    padding: 12px 16px;
    background: var(--baseAlt1Color);
    cursor: pointer;
    transition: background-color 0.2s ease;
    gap: 12px;
}

.api-endpoint-header:hover {
    background: var(--baseAlt2Color);
}

.api-endpoint-content {
    padding: 0;
    max-height: 0;
    overflow: hidden;
    transition: all 0.3s ease;
    background: var(--baseColor);
}

.api-endpoint-content.active {
    padding: 16px;
    max-height: 1000px;
    border-top: 1px solid var(--baseAlt2Color);
}

/* HTTP Method badges */
.http-method {
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    color: white;
    min-width: 50px;
    text-align: center;
}

.http-method.get { background: #2196f3; }
.http-method.post { background: #4caf50; }
.http-method.put { background: #ff9800; }
.http-method.patch { background: #9c27b0; }
.http-method.delete { background: #f44336; }
.http-method.options { background: #607d8b; }
.http-method.head { background: #795548; }

/* Auth icon */
.auth-icon {
    font-size: 16px;
    margin-left: auto;
}

/* Test endpoint button */
.test-endpoint-btn {
    padding: 4px 8px;
    background: var(--successColor);
    color: white;
    border: none;
    border-radius: 4px;
    font-size: 11px;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 4px;
    transition: background-color 0.2s ease;
}

.test-endpoint-btn:hover {
    background: var(--successColorHover);
}

/* Auth details */
.auth-details {
    background: var(--baseAlt1Color);
    border: 1px solid var(--baseAlt2Color);
    border-radius: 4px;
    padding: 8px 12px;
}

.auth-icon-large {
    font-size: 20px;
}

.auth-type {
    font-size: 11px;
    text-transform: uppercase;
    color: var(--txtHintColor);
    font-weight: 500;
}

/* Schema section */
.schema-container {
    background: var(--baseAlt1Color);
    border-radius: 4px;
    overflow: hidden;
}

.copy-schema-btn {
    font-size: 11px;
    padding: 2px 6px;
}

/* Code blocks */
.code-block {
    background: #f5f5f5;
    border: 1px solid #ddd;
    border-radius: 4px;
    padding: 12px;
    font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
    font-size: 13px;
    line-height: 1.4;
    overflow-x: auto;
    margin: 0;
}

.code-block pre {
    margin: 0;
    white-space: pre-wrap;
}

.code-block code {
    background: none;
    padding: 0;
    color: inherit;
}

/* JSON syntax highlighting */
.json-key { color: #e91e63; font-weight: bold; }
.json-string { color: #4caf50; }
.json-number { color: #2196f3; }
.json-boolean { color: #ff9800; font-weight: bold; }
.json-null { color: #9e9e9e; font-style: italic; }

/* Statistics display */
.stats-grid {
    display: flex;
    gap: 16px;
    margin-bottom: 16px;
    flex-wrap: wrap;
}

.stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 8px 12px;
    background: var(--baseAlt1Color);
    border-radius: 4px;
    min-width: 80px;
}

.stat-value {
    font-size: 18px;
    font-weight: 600;
    color: var(--successColor);
}

.stat-label {
    font-size: 11px;
    color: var(--txtHintColor);
    text-transform: uppercase;
    margin-top: 2px;
}

/* Tabs styling */
.tabs-header {
    display: flex;
    border-bottom: 1px solid var(--baseAlt2Color);
    background: var(--baseAlt1Color);
    padding: 0 16px;
}

.tab-item {
    padding: 12px 16px;
    border: none;
    background: none;
    color: var(--txtHintColor);
    cursor: pointer;
    border-bottom: 2px solid transparent;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    gap: 6px;
}

.tab-item:hover {
    color: var(--txtPrimaryColor);
}

.tab-item.active {
    color: var(--successColor);
    border-bottom-color: var(--successColor);
}

.tabs-content {
    padding: 16px;
}

.tab-content {
    display: none;
}

.tab-content.active {
    display: block;
}
</style>
{{end}}
