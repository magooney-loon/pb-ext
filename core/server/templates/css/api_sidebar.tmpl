    color: var(--txtHintColor, #666);
    border: none;
    background: transparent;
    cursor: pointer;
    transition: all 0.2s ease;
    border-radius: 4px;
}

.remove-query-param:hover {
    background: rgba(239, 68, 68, 0.1);
    color: #ef4444;
}

.query-param-actions {
    display: flex;
