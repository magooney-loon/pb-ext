    margin-bottom: 12px;
}

.query-param-preview {
    padding: 8px 12px;
    background: var(--baseAlt1Color, #f8f9fa);
    border: 1px solid var(--baseAlt2Color, #e5e5e5);
    border-radius: 6px;
    margin-top: 8px;
}

.query-param-preview code {
    color: var(--primaryColor, #3b82f6);
    font-weight: 500;
    font-size: 12px;
}

/* Query parameter entry animations */
.query-param-entry {
    opacity: 1;
    transform: translateY(0);
    transition: all 0.2s ease;
}

.query-param-entry.removing {
    opacity: 0;
    transform: translateY(-10px);
}
