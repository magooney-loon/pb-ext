/* Response Status */
.response-status {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 12px;
}

.status-badge {
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
}

.status-badge.status-ready {
    background: var(--baseAlt2Color, #e5e5e5);
    color: var(--txtHintColor, #666);
}

.status-badge.status-2xx {
    background: rgba(34, 197, 94, 0.1);
    color: #22c55e;
}

.status-badge.status-3xx {
    background: rgba(59, 130, 246, 0.1);
    color: #3b82f6;
}

.status-badge.status-4xx {
    background: rgba(245, 158, 11, 0.1);
    color: #f59e0b;
}

.status-badge.status-5xx {
    background: rgba(239, 68, 68, 0.1);
    color: #ef4444;
}

.response-time {
    color: var(--txtHintColor, #666);
    font-size: 11px;
}

/* Actions */
.tester-actions {
    padding: 20px;
    border-top: 1px solid var(--baseAlt2Color, #e5e5e5);
    background: var(--baseAlt1Color, #f8f9fa);
    flex-shrink: 0; /* Never shrink */
}

/* Buttons */
.btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    padding: 8px 16px;
    border: none;
    border-radius: 6px;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
}

.btn-primary {
    background: var(--primaryColor, #3b82f6);
    color: white;
}

.btn-primary:hover {
    background: #2563eb;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
}

.btn-secondary {
    background: var(--baseAlt2Color, #e5e5e5);
    color: var(--txtPrimaryColor, #333);
}

.btn-secondary:hover {
    background: var(--baseAlt3Color, #d4d4d4);
}

.btn-success {
    background: #22c55e;
    color: white;
}

.btn-xs {
    padding: 4px 8px;
    font-size: 12px;
}

.btn-sm {
    padding: 6px 12px;
    font-size: 13px;
}

.btn-block {
    width: 100%;
}

.btn-transparent {
    background: transparent;
    color: var(--txtHintColor, #666);
}

.btn-transparent:hover {
    background: var(--baseAlt1Color, #f8f9fa);
    color: var(--txtPrimaryColor, #333);
}

.btn i {
    font-size: 16px;
}

/* Mobile Overlay */
.api-sidebar-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    z-index: 9998;
    pointer-events: none;
}

.api-sidebar-overlay.active {
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
}

/* Main Content Adjustment */
.api-main-content {
    transition: margin-right 0.3s ease;
}

.api-main-content.with-sidebar {
    margin-right: 400px;
}

/* Loading State */
.animate-spin {
    animation: spin 1s linear infinite;
}

@keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
}

/* Alert Styles */
.alert {
    padding: 12px 16px;
    border-radius: 6px;
    margin-bottom: 16px;
}

.alert-danger {
    background: rgba(239, 68, 68, 0.1);
    color: #ef4444;
    border: 1px solid rgba(239, 68, 68, 0.2);
}

.alert i {
    margin-right: 8px;
}

/* Details/Summary */
details {
    margin-top: 12px;
}

summary {
    cursor: pointer;
    font-size: 12px;
    color: var(--txtHintColor, #666);
    padding: 4px 0;
}

summary:hover {
    color: var(--txtPrimaryColor, #333);
}





/* Utility Classes */
.txt-mono {
    font-family: 'SF Mono', Monaco, 'Cascadia Code', monospace;
}

.txt-sm {
    font-size: 13px;
}

.txt-xs {
    font-size: 11px;
}

.txt-hint {
    color: var(--txtHintColor, #666);
}

.txt-danger {
    color: #ef4444;
}

.txt-success {
    color: #22c55e;
}

.txt-center {
    text-align: center;
}

.txt-bold {
    font-weight: 600;
}

.mb-2 {
    margin-bottom: 8px;
}

.mt-2 {
    margin-top: 8px;
}

.p-4 {
    padding: 16px;
}

.gap-2 {
    gap: 8px;
}

.flex {
    display: flex;
}

.flex-fill {
    flex: 1;
}

.align-center {
    align-items: center;
}

.ml-auto {
    margin-left: auto;
}

/* Inference and Empty States */
.empty-fields-state {
    padding: 24px;
    background: var(--baseAlt1Color, #f8f9fa);
    border: 2px dashed var(--baseAlt2Color, #e5e5e5);
    border-radius: 8px;
    margin: 16px 0;
}

.empty-fields-state i.ri-xl {
    font-size: 48px;
    color: var(--txtHintColor, #666);
    opacity: 0.5;
    margin-bottom: 12px;
}

.inference-note {
    margin-top: 16px;
    padding: 12px;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.05) 0%, rgba(139, 92, 246, 0.05) 100%);
    border-left: 3px solid var(--primaryColor, #3b82f6);
    border-radius: 4px;
}

.inference-note small {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 12px;
}

.inference-note i {
    color: var(--primaryColor, #3b82f6);
    font-size: 14px;
}

/* Raw JSON Mode */
#raw-json-payload {
    font-family: 'SF Mono', Monaco, 'Cascadia Code', monospace !important;
    font-size: 13px;
    line-height: 1.6;
    tab-size: 2;
    background: var(--baseAlt1Color, #f8f9fa);
    border: 1px solid var(--baseAlt2Color, #e5e5e5);
}

#raw-json-payload:focus {
    background: var(--baseColor, #ffffff);
    border-color: var(--primaryColor, #3b82f6);
}

/* Success Indicators */
.txt-success {
    color: #22c55e;
}

.ri-check-line.txt-success {
    color: #22c55e !important;
}

.ri-magic-line {
    animation: pulse 2s infinite;
}

@keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.6; }
}

/* Field Detection Status */
.section-description small.txt-success {
    display: flex;
    align-items: center;
    gap: 4px;
    color: #22c55e;
    font-weight: 500;
}

.section-description small.txt-hint {
    display: flex;
    align-items: center;
    gap: 4px;
}

/* =============================================================================
   SIMPLE FORM FIELD ENHANCEMENTS
   ============================================================================= */

/* Input Hints */
.input-hint {
    display: flex;
    align-items: center;
    gap: 6px;
    margin-top: 4px;
    font-size: 11px;
    color: var(--txtHintColor, #666);
    line-height: 1.4;
}

.input-hint i {
    font-size: 12px;
    color: var(--primaryColor, #3b82f6);
    opacity: 0.7;
}

/* Enhanced param-type styling */
.param-type {
