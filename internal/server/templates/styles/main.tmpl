{{define "styles"}}
<style>
    /* Basic reset and globals */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    
    body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        color: #e4e4e7;
        background-color: #09090b;
        background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23232323' fill-opacity='0.15'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
        line-height: 1.5;
        padding: 12px;
        text-shadow: 0 1px 1px rgba(0,0,0,0.5);
    }
    
    /* Colors */
    :root {
        --border-color: #27272a;
        --green-status: #22c55e;
        --yellow-status: #eab308;
        --red-status: #ef4444;
        --blue-accent: #3b82f6;
        --text-gray: #a1a1aa;
        --panel-bg: #18181b;
        --card-bg: #27272a;
        --progress-bg: #3f3f46;
        --card-shadow: 0 8px 20px rgba(0, 0, 0, 0.5), 0 6px 6px rgba(0, 0, 0, 0.4);
        --card-highlight: rgba(255, 255, 255, 0.07);
        --hover-bg: #3f3f46;
        --glass-effect: rgba(255, 255, 255, 0.03);
        --inner-shadow: inset 0 1px 4px rgba(0, 0, 0, 0.6);
        --texture-overlay: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100' height='100' filter='url(%23noise)' opacity='0.08'/%3E%3C/svg%3E");
    }
    
    /* Layout containers */
    .dashboard {
        max-width: 1400px;
        margin: 0 auto;
        opacity: 0;
        transition: opacity 0.5s cubic-bezier(0.19, 1, 0.22, 1);
    }
    
    .panel {
        background-color: var(--panel-bg);
        background-image: var(--texture-overlay);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        margin-bottom: 18px;
        padding: 18px;
        box-shadow: var(--card-shadow);
        position: relative;
        overflow: hidden;
        backdrop-filter: blur(5px);
    }
    
    .panel:before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(to right, var(--blue-accent), transparent 80%);
        box-shadow: 0 0 15px rgba(59, 130, 246, 0.5);
    }
    
    /* Header styles */
    .header {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        align-items: center;
        padding: 15px 20px;
        background: linear-gradient(to bottom, var(--panel-bg), rgba(24, 24, 27, 0.8));
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        position: relative;
    }
    
    .header:after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 5%;
        width: 90%;
        height: 1px;
        background: linear-gradient(to right, transparent, rgba(255, 255, 255, 0.05), transparent);
    }
    
    /* Icon styles */
    .icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 20px;
        height: 20px;
        margin-right: 8px;
        color: var(--text-gray);
        filter: drop-shadow(0 1px 1px rgba(0,0,0,0.5));
    }
    
    .metric-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 28px;
        height: 28px;
        margin-right: 10px;
        background: linear-gradient(135deg, var(--card-bg), #323236);
        border-radius: 50%;
        box-shadow: var(--inner-shadow), 0 2px 4px rgba(0,0,0,0.3);
        color: var(--blue-accent);
        position: relative;
        overflow: hidden;
    }
    
    .metric-icon:after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 50%;
        background: linear-gradient(to bottom, rgba(255,255,255,0.1), transparent);
        border-radius: 50% 50% 0 0;
    }
    
    .system-info {
        flex: 1;
        min-width: 260px;
    }
    
    .system-title {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 8px;
        flex-wrap: wrap;
    }
    
    .system-meta {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        gap: 8px;
        font-size: 12px;
        color: var(--text-gray);
    }
    
    .meta-item {
        position: relative;
        padding-right: 10px;
        margin-right: 2px;
    }
    
    .meta-item:not(:last-child):after {
        content: 'â€¢';
        position: absolute;
        right: 0;
        color: var(--text-gray);
    }
    
    .stats-summary {
        display: flex;
        align-items: center;
        margin-top: 10px;
        padding: 8px;
        background: rgba(0,0,0,0.2);
        border-radius: 8px;
        box-shadow: var(--inner-shadow);
    }
    
    .stats-group {
        text-align: right;
    }
    
    .stats-row {
        display: flex;
        align-items: center;
        justify-content: flex-end;
        gap: 8px;
        margin-bottom: 4px;
    }
    
    .stats-row:last-child {
        margin-bottom: 0;
    }
    
    /* Section title */
    .section-title {
        font-size: 15px;
        font-weight: 600;
        color: #f4f4f5;
        margin-bottom: 16px;
        padding-bottom: 10px;
        border-bottom: 1px solid var(--border-color);
        display: flex;
        align-items: center;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        position: relative;
    }
    
    .section-title:after {
        content: '';
        position: absolute;
        bottom: -1px;
        left: 0;
        width: 60px;
        height: 2px;
        background: linear-gradient(to right, var(--blue-accent), transparent);
    }
    
    .section-title-icon {
        width: 20px;
        height: 20px;
        margin-right: 10px;
        color: var(--blue-accent);
        filter: drop-shadow(0 0 5px rgba(59, 130, 246, 0.3));
    }
    
    /* Card grids */
    .metrics-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 14px;
    }
    
    .metric-card {
        flex: 1;
        min-width: 180px;
        border: 1px solid var(--border-color);
        border-radius: 10px;
        padding: 16px;
        background: linear-gradient(145deg, #2a2a2e, #242428);
        background-image: var(--texture-overlay);
        box-shadow: var(--card-shadow);
        position: relative;
        overflow: hidden;
        backface-visibility: hidden;
    }
    
    .metric-card:after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 30%;
        background: linear-gradient(to bottom, var(--glass-effect), transparent);
        border-radius: 10px 10px 0 0;
    }
    
    .metric-card:before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        border-radius: 10px;
        padding: 2px;
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.5), transparent);
        -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
        -webkit-mask-composite: xor;
        mask-composite: exclude;
        opacity: 0;
        pointer-events: none;
    }
    
    .card-title {
        font-size: 14px;
        font-weight: 600;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        color: #f4f4f5;
        text-shadow: 0 1px 2px rgba(0,0,0,0.5);
    }
    
    /* Progress bar */
    .progress-bar {
        width: 100%;
        height: 8px;
        background-color: var(--progress-bg);
        border-radius: 4px;
        margin: 12px 0;
        overflow: hidden;
        box-shadow: var(--inner-shadow);
        position: relative;
    }
    
    .progress-bar:after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 50%;
        background: linear-gradient(to bottom, rgba(255,255,255,0.1), transparent);
        border-radius: 4px 4px 0 0;
    }
    
    .progress-value {
        height: 100%;
        border-radius: 4px;
        transition: width 0.8s cubic-bezier(0.19, 1, 0.22, 1);
        background-image: linear-gradient(90deg, 
                    rgba(255,255,255,0.15) 0%, 
                    rgba(255,255,255,0.05) 25%,
                    rgba(255,255,255,0.15) 50%,
                    rgba(255,255,255,0.05) 75%,
                    rgba(255,255,255,0.15) 100%);
        background-size: 200% 100%;
        box-shadow: 0 0 8px rgba(255,255,255,0.1);
    }
    
    .progress-green {
        background-color: var(--green-status);
    }
    
    .progress-yellow {
        background-color: var(--yellow-status);
    }
    
    .progress-red {
        background-color: var(--red-status);
    }
    
    .progress-blue {
        background-color: var(--blue-accent);
    }
    
    /* Data layouts */
    .data-row {
        display: flex;
        justify-content: space-between;
        margin-top: 10px;
        flex-wrap: wrap;
        gap: 10px;
        padding: 8px;
        border-radius: 8px;
        background: rgba(0,0,0,0.1);
        box-shadow: var(--inner-shadow);
    }
    
    .data-col {
        flex: 1;
        min-width: 80px;
    }
    
    .data-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
        gap: 14px;
        margin-top: 14px;
    }
    
    .cpu-core-grid {
        display: grid;
        grid-template-columns: repeat(2, minmax(120px, 1fr));
        gap: 12px;
        margin-top: 14px;
    }
    
    .network-interfaces {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
        gap: 12px;
        margin-top: 14px;
    }
    
    /* Memory and heap specific styles */
    .memory-stats {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
        gap: 12px;
        margin: 0 0 14px 0;
    }
    
    .memory-stat-card {
        border: 1px solid var(--border-color);
        border-radius: 8px;
        padding: 12px;
        background: linear-gradient(145deg, #2a2a2e, #242428);
        background-image: var(--texture-overlay);
        box-shadow: var(--card-shadow);
        position: relative;
        overflow: hidden;
    }
    
    .memory-stat-card:after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 30%;
        background: linear-gradient(to bottom, var(--glass-effect), transparent);
        border-radius: 8px 8px 0 0;
    }
    
    .heap-allocations {
        border: 1px solid var(--border-color);
        border-radius: 8px;
        padding: 14px;
        margin-top: 14px;
        background: linear-gradient(145deg, #2a2a2e, #242428);
        background-image: var(--texture-overlay);
        box-shadow: var(--card-shadow);
        position: relative;
        overflow: hidden;
    }
    
    .heap-allocations:after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 30%;
        background: linear-gradient(to bottom, var(--glass-effect), transparent);
        border-radius: 8px 8px 0 0;
    }
    
    /* Status elements */
    .status-indicator {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        display: inline-block;
        position: relative;
        box-shadow: 0 0 0 1px rgba(0,0,0,0.3), inset 0 1px 1px rgba(255,255,255,0.2);
    }
    
    .status-healthy {
        background: radial-gradient(circle at 30% 30%, #4ade80, var(--green-status));
        box-shadow: 0 0 8px rgba(34, 197, 94, 0.5);
    }
    
    .status-unhealthy {
        background: radial-gradient(circle at 30% 30%, #f87171, var(--red-status));
        box-shadow: 0 0 8px rgba(239, 68, 68, 0.5);
    }
    
    .status-badge {
        display: inline-flex;
        padding: 4px 10px;
        border-radius: 14px;
        font-size: 12px;
        font-weight: 600;
        margin-left: 6px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.3);
        text-shadow: 0 1px 1px rgba(0,0,0,0.3);
    }
    
    .status-badge-healthy {
        background: rgba(34, 197, 94, 0.15);
        color: var(--green-status);
        border: 1px solid rgba(34, 197, 94, 0.3);
    }
    
    .status-badge-unhealthy {
        background: rgba(239, 68, 68, 0.15);
        color: var(--red-status);
        border: 1px solid rgba(239, 68, 68, 0.3);
    }
    
    /* Typography */
    .hostname {
        font-size: 20px;
        font-weight: 600;
        color: #f4f4f5;
        text-shadow: 0 2px 3px rgba(0,0,0,0.5);
        letter-spacing: 0.5px;
    }
    
    .divider {
        width: 1px;
        height: 36px;
        background: linear-gradient(to bottom, transparent, var(--border-color), transparent);
        margin: 0 20px;
    }
    
    .unit {
        font-size: 12px;
        color: var(--text-gray);
        font-weight: 500;
    }
    
    .label {
        font-size: 12px;
        color: var(--text-gray);
        margin-bottom: 4px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-weight: 500;
    }
    
    .value {
        font-size: 14px;
        font-weight: 600;
        color: #f4f4f5;
        text-shadow: 0 1px 2px rgba(0,0,0,0.4);
    }
    
    .main-value {
        font-size: 20px;
        font-weight: 700;
        color: #f4f4f5;
        text-shadow: 0 2px 3px rgba(0,0,0,0.4);
        letter-spacing: 0.5px;
    }
    
    /* Responsive adjustments */
    @media (max-width: 768px) {
        .stats-summary {
            margin-top: 12px;
            width: 100%;
        }
        .divider {
            display: none;
        }
        .detail-panel {
            flex-basis: 100%;
        }
        .system-info {
            margin-bottom: 12px;
            width: 100%;
        }
        .stats-group {
            width: 50%;
            padding: 0 8px;
        }
        .meta-item {
            margin-bottom: 4px;
        }
    }
    
    @media (max-width: 480px) {
        .header {
            padding: 12px 15px;
        }
        .system-meta {
            flex-direction: column;
            align-items: flex-start;
            gap: 2px;
        }
        .meta-item {
            padding-right: 0;
        }
        .meta-item:after {
            display: none;
        }
        .stats-summary {
            flex-direction: column;
            align-items: stretch;
        }
        .divider {
            display: none;
        }
        .stats-group {
            width: 100%;
            text-align: left;
            margin-bottom: 8px;
        }
        .stats-group:last-child {
            margin-bottom: 0;
        }
        .stats-row {
            justify-content: space-between;
        }
    }
    
    .detail-panel {
        flex: 1;
        min-width: 300px;
        background-color: var(--panel-bg);
        background-image: var(--texture-overlay);
        border: 1px solid var(--border-color);
        border-radius: 10px;
        padding: 18px;
        box-shadow: var(--card-shadow);
        position: relative;
        overflow: hidden;
    }
    
    .detail-panel:before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 2px;
        background: linear-gradient(to right, var(--card-highlight), transparent);
    }
    
    .three-panel-grid {
        display: flex;
        gap: 14px;
        margin-bottom: 14px;
    }
    
    @media (max-width: 1000px) {
        .three-panel-grid {
            flex-direction: column;
        }
    }
    
    .gauge {
        position: relative;
        width: 70px;
        height: 35px;
        margin: 10px auto;
        overflow: hidden;
    }
    
    .gauge-background {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        border: 5px solid var(--progress-bg);
        border-top-color: transparent;
        border-left-color: transparent;
        border-right-color: transparent;
        box-sizing: border-box;
        box-shadow: inset 0 4px 4px rgba(0,0,0,0.3);
    }
    
    .gauge-fill {
        position: absolute;
        top: 0;
        left: 0;
        width: 70px;
        height: 70px;
        border-radius: 50%;
        clip-path: polygon(35px 35px, 35px 0, 70px 0, 70px 35px);
        transform-origin: center;
        background: linear-gradient(90deg, var(--blue-accent), #60a5fa);
        box-shadow: 0 0 10px rgba(59, 130, 246, 0.5);
    }
    
    .gauge-cover {
        position: absolute;
        top: 5px;
        left: 5px;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(145deg, #242428, #1e1e22);
        clip-path: polygon(30px 30px, 30px 0, 60px 0, 60px 60px, 0 60px, 0 30px);
        box-shadow: inset 0 2px 4px rgba(0,0,0,0.3);
    }
    
    .gauge-value {
        position: absolute;
        bottom: 2px;
        left: 0;
        width: 100%;
        text-align: center;
        font-size: 13px;
        font-weight: 700;
        color: #f4f4f5;
        text-shadow: 0 1px 2px rgba(0,0,0,0.5);
    }
    
    /* Compact panel styles */
    .compact-panel {
        padding: 12px;
        margin-bottom: 12px;
    }
    
    .compact-title {
        margin-bottom: 10px;
        padding-bottom: 6px;
        font-size: 14px;
    }
    
    .compact-grid {
        gap: 10px;
    }
    
    .compact-card {
        padding: 10px;
        min-width: 160px;
    }
    
    .compact-icon {
        width: 22px;
        height: 22px;
        margin-right: 6px;
    }
    
    .metric-value-row {
        display: flex;
        align-items: baseline;
        gap: 4px;
        margin-bottom: 4px;
    }
    
    .compact-progress {
        height: 6px;
        margin: 6px 0;
    }
    
    .compact-data-row {
        margin-top: 6px;
        padding: 4px;
        gap: 6px;
    }
    
    .compact-data-row .label, 
    .compact-data-row .value {
        display: inline-block;
    }
    
    .compact-data-row .label {
        margin-right: 4px;
        margin-bottom: 0;
    }
    
    .compact-data-row .data-col {
        display: flex;
        align-items: baseline;
        justify-content: space-between;
    }
    
    .three-col {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 4px;
    }
    
    .three-col .data-col {
        flex-direction: column;
        align-items: flex-start;
    }
    
    /* Metrics panel styles */
    .metrics-panel {
        padding: 0;
        margin-bottom: 10px;
        background-color: #09090b;
        border-radius: 12px;
        overflow: hidden;
        border: 1px solid #27272a;
    }
    
    .metrics-panel .section-title {
        background-color: #18181b;
        color: #e4e4e7;
        padding: 8px 15px;
        font-size: 13px;
        font-weight: 600;
        letter-spacing: 0.5px;
        border-bottom: 1px solid #27272a;
        margin-bottom: 0;
    }
    
    .metrics-row {
        display: flex;
        flex-wrap: wrap;
        gap: 1px;
        background-color: #18181b;
    }
    
    .stat-card {
        flex: 1;
        min-width: 180px;
        background-color: #27272a;
        padding: 10px;
        display: flex;
        flex-direction: column;
    }
    
    .stat-header {
        display: flex;
        align-items: center;
        margin-bottom: 8px;
    }
    
    .stat-icon {
        width: 20px;
        height: 20px;
        margin-right: 8px;
        color: #6b7280;
    }
    
    .cpu-icon {
        color: #3b82f6;
    }
    
    .memory-icon {
        color: #10b981;
    }
    
    .disk-icon {
        color: #10b981;
    }
    
    .network-icon {
        color: #6366f1;
    }
    
    .process-icon {
        color: #3b82f6;
    }
    
    .runtime-icon {
        color: #8b5cf6;
    }
    
    .stat-title {
        font-size: 13px;
        font-weight: 500;
        color: #e4e4e7;
    }
    
    .stat-value {
        font-size: 20px;
        font-weight: 600;
        color: #f4f4f5;
        margin-bottom: 6px;
        display: flex;
        align-items: baseline;
        gap: 5px;
    }
    
    .stat-unit {
        font-size: 11px;
        color: #9ca3af;
        font-weight: 400;
    }
    
    .mini-progress {
        height: 4px;
        background-color: #3f3f46;
        border-radius: 2px;
        overflow: hidden;
        margin-bottom: 12px;
    }
    
    .mini-progress-value {
        height: 100%;
        background-color: #3b82f6;
        border-radius: 2px;
    }
    
    .memory-progress-value {
        background-color: #10b981;
    }
    
    .disk-progress-value {
        background-color: #10b981;
    }
    
    .process-progress-value {
        background-color: #3b82f6;
    }
    
    .stat-details, .network-details, .runtime-details {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 5px;
        font-size: 12px;
    }
    
    .network-details, .runtime-details {
        display: grid;
        grid-template-columns: repeat(1, 1fr);
    }
    
    .detail-row, .network-detail-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    .detail-label {
        color: #9ca3af;
        font-size: 10px;
        font-weight: 500;
